# EditorConfig - Ayuda a mantener consistencia de estilo entre diferentes editores
# https://editorconfig.org

root = true

# Configuración por defecto para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Archivos Python
[*.py]
indent_size = 4
max_line_length = 88

# Archivos JavaScript y TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 100

# Archivos HTML y Templates Django
[*.{html,htm}]
indent_size = 2
max_line_length = 120

# Archivos CSS, SCSS, LESS
[*.{css,scss,less}]
indent_size = 2

# Archivos JSON
[*.json]
indent_size = 2

# Archivos YAML
[*.{yml,yaml}]
indent_size = 2

# Archivos Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Archivos de configuración
[{package.json,.prettierrc,.eslintrc,.babelrc}]
indent_size = 2

# Makefiles requieren tabs
[Makefile]
indent_style = tab

# Archivos de Django migrations (no formatear)
[*/migrations/*.py]
max_line_length = off
